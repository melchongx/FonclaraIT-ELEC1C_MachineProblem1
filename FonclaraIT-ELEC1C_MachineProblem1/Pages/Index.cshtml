@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

    var FirstName = "";
    var LastName = "";
    var Birthday = "";
    Boolean isTenured;
    int SalaryPerHour;
    string email;
}

<section class="infoFormContainer">
    <form class="infoForm">
        <div class="infoFormEntry">
            <label for="fName">First Name:</label>
            <input type="text" id="fName" name="fname" />
        </div>
        <div class="infoFormEntry">
            <label for="lName">Last Name:</label>
            <input type="text" id="lName" name="lName" />
        </div>
        <div class="infoFormEntry">
            <label for="bDay">Birthday:</label>
            <input type="date" id="bDay" name="bDay" />
        </div>
        <div class="infoFormEntry">
            <label for="isTenured">Status:</label>
            <select id="isTenured" name="isTenured">
                <option value="probationary">Probationary</option>
                <option value="permanent">Permanent</option>
            </select>
        </div>
        <div class="infoFormEntry">
            <label for="salPerHour">Salary per Hour:</label>
            <input type="text" id="salPerHour" name="salPerHour" />
        </div>
        <div class="infoFormEntry">
            <label for="emailAdd">Email:</label>
            <input type="email" id="emailAdd" name="emailAdd" />
        </div>
        <div class="infoFormEntry">
            <button type="submit">Submit</button>
            <button type="reset">Reset</button>
        </div>
    </form>
</section>